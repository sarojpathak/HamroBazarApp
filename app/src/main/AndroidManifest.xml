<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.saroj.hamrobazar">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.PostingRuleActivity"
            android:label="@string/post" />
        <activity
            android:name=".activities.SafetyTripsActivity"
            android:label="@string/safety" />
        <activity
            android:name=".activities.TermsUseActivity"
            android:label="@string/term" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.WelcomeActivity">

        </activity>
        <activity android:name=".activities.SplashActivity" >

        </activity>
        <activity android:name=".activities.SignupActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.DashboardActivity" />
    </application>

</manifest>